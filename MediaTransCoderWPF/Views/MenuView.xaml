<UserControl x:Class="MediaTransCoder.WPF.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaTransCoder.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="audioButton" Content="Covnert Audio" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="150" Height="35" Click="audioButton_Click"/>
        <Button x:Name="videoButton" Content="Convert Video" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" Width="150" Height="35" Click="videoButton_Click"/>
        <Button x:Name="imageButton" Content="Convert Image" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Width="150" Height="35" Click="imageButton_Click"/>
        <Button x:Name="settingsButton" Content="Settings" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Width="150" Height="35" Click="settingsButton_Click"/>
    </Grid>
</UserControl>
