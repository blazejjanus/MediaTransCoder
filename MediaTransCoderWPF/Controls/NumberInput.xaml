<UserControl x:Class="MediaTransCoder.WPF.Controls.NumberInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaTransCoder.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="100">
    <Grid Background="White">
        <TextBox x:Name="valueBox" Margin="0, 0, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="50" IsReadOnly="True"/>
        <RepeatButton x:Name="minusButton" Content="-" Margin="50, 0, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="25" Click="minusButton_Click" />
        <RepeatButton x:Name="plusButton" Content="+" Margin="75, 0, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="25" Click="plusButton_Click" />
    </Grid>
</UserControl>
